<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFEF6"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_dataPrivConsent_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="DATA PRIVACY CONSENT"
                android:textColor="#428E5C"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_dataPrivConsent_content"
                android:layout_width="280dp"
                android:layout_height="350dp"
                android:layout_marginTop="15dp"
                android:scrollbars="vertical"
                android:justificationMode="inter_word"
                android:text="U-Trace is committed to uphold data privacy rights and to comply with the Philippine Data Privacy Act of 2012 (DPA). This notice explains the purposes and legal bases for the processing of personal information for COVID-19 response activities that U-Trace collects through its mobile application. The following information may be collected upon using this application: full name, address, mobile number, and close contact information.  The information used is processed pursuant to Republic Act No. 11332 (the “Mandatory Reporting of Notifiable Diseases and Health Events of Public Health Concern Act”).  The information you give is used to create reports that will help the Government to create policies and actions in response to the COVID-19 Pandemic. Any data collected for contact tracing before a user withdraws consent remains in the system. The data will be deleted from the system depending on your data retention settings. If you want to learn more about how our system works and handles your data, you may contact us at utracdlsu@gmail.com."
                android:textColor="#428E5C"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_dataPrivConsent_title" />

            <Button
                android:id="@+id/btn_agreeConsent"
                android:layout_width="250dp"
                android:layout_height="48dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="#428E5C"
                android:text="AGREE AND CONFIRM UPLOAD"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_dataPrivConsent_content" />

            <Button
                android:id="@+id/btn_cancelUploadData"
                android:layout_width="250dp"
                android:layout_height="48dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="#708978"
                android:text="CANCEL AND CLOSE"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_agreeConsent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>